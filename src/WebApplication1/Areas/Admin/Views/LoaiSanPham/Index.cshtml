@inject WebApplication1.Interface.ITheLoaiService TheLoaiService

@section header{
    <h1>Danh sách thể loại</h1>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a style="cursor:pointer" asp-action="ThemTheLoai" asp-controller="LoaiSanPham">Thêm loại sản phẩm</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTablesTheLoai">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên loại</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in TheLoaiService.DanhSachLoaiSP())
                        {
                            <tr class="odd gradeX">
                                <td>@item.Id</td>
                                <td> @item.TenLoai </td>
                                <td>
                                    <input type="button" class="btn btn-success" value="Sách thuộc thể loại" onclick="location.href='@Url.Action("SachTheoTheLoai", "SanPhamAd", new {@id=item.Id })'" />
                                    <input type="button" class="btn btn-success" value="Sửa thể loại" onclick="location.href='@Url.Action("SuaTheLoai", "LoaiSanPham", new {@id=item.Id })'" />

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

