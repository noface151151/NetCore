                        <ins>@String.Format("{0:0,0}", item.Gia) VNĐ</ins>
                    </div>

                    <div class="product-option-shop">
                        <a  style="cursor:pointer" class="add_to_cart_button" asp-action="Themgiohang" asp-controller="GioHang" asp-route-idSP="@item.Id" asp-route-url="@Context.Request.Path.ToString()">Mua hàng</a>
